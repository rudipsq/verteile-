<!DOCTYPE html>

<!-- File origin: VS1LAB A1a -->

<html lang="en">
  <head>
    <!-- Leaflet CSS and JavaScript (in this order) -->
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
      integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
      crossorigin=""
    />
    <script
      src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
      integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
      crossorigin=""
    ></script>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GeoTagApp</title>
    <link rel="stylesheet" href="./stylesheets/style.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>

  <body>
    <header class="header">
      <img
        src="./images/location.png"
        class="header__image"
        alt="an image of a map and location"
      />
      <h1 class="header__title">GeoTagApp</h1>
      <nav class="header__navigation">
        <a href="#">About</a> | <a href="#">Help</a> | <a href="/">Home</a>
      </nav>
    </header>

    <main class="main">
      <section class="main__tagging tagging">
        <h2>Tagging</h2>

        <!-- ############### VS1Lab 1a Form 1 Start -->
        <form id="tag-form" action="/tagging" method="post">
          <!-- ... your code here ... -->
          <fieldset>
            <legend>Add a new GeoTag</legend>
            <label>
              Latitude:
              <input
                id="tag-form-latitude"
                type="number"
                name="latitude"
                value="<%= latitude %>"
                placeholder="Enter a latitude"
                readonly
              />
            </label>

            <label>
              Longitude:
              <input
                id="tag-form-longitude"
                type="number"
                name="longitude"
                value="<%= longitude %>"
                placeholder="Enter a longitude"
                readonly
              />
            </label>

            <label>
              Name:
              <input
                id="tag-form-name"
                type="text"
                name="name"
                placeholder="Enter a name"
                maxlength="10"
                required
              />
            </label>

            <label>
              Hashtag:
              <input
                id="tag-form-hashtag"
                type="text"
                name="hashtag"
                maxlength="11"
                placeholder="Enter: '#BspHashtag'"
                pattern="#[a-zA-Z]+"
              />
            </label>

            <input type="submit" id="tag-form-submit" value="Add Tag" />
          </fieldset>
        </form>
        <!-- ############### VS1Lab 1a Form 1 End -->
      </section>

      <section class="main__discovery discovery">
        <h2 class="discovery__title">Discovery</h2>

        <!-- ############### VS1Lab 1a Form 2 Start -->
        <form
          class="discovery__search"
          id="discoveryFilterForm"
          action="/discovery"
          method="post"
        >
          <!-- ... your code here ... -->
          <fieldset>
            <legend>Search</legend>

            <label
              >Search term or keywords:
              <input
                id="discovery-form-search"
                type="search"
                placeholder="e.g. Karlsruhe"
                name="searchterm"
              />
            </label>

            <label>
              <input
                id="discovery-form-latitude"
                name="latitude"
                value="<%= latitude %>"
                placeholder="Enter a latitude"
                hidden
              />
            </label>

            <label>
              <input
                id="discovery-form-longitude"
                name="longitude"
                value="<%= longitude %>"
                placeholder="Enter a longitude"
                hidden
              />
            </label>

            <label>
              <input id="discovery-form-submit" type="submit" value="Search" />
            </label>
          </fieldset>
        </form>
        <!-- ############### VS1Lab 1a Form 2 End -->

        <div class="discovery__wrapper">
          <div class="discovery__taglist">
            <ul class="discovery__results" id="discoveryResults">
              <% if (taglist !== undefined) taglist.forEach(function(gtag) { %>
              <li>
                <%= gtag.name %> ( <%= gtag.latitude %>,<%= gtag.longitude %>)
                <%= gtag.hashtag %>
              </li>
              <% }); %>
            </ul>
            <div id="pagination" style="display: none">
              <a href="#" id="prev"><</a>
              <p id="currentPage">1</p>
              <a href="#" id="next">></a>
            </div>
          </div>

          <div class="discovery__map" id="map" data-tags="<%= markers %>">
            <img
              src="./images/mapview.jpg"
              alt="a map with locations"
              id="mapView"
              class="jsDelete"
            />
            <span class="jsDelete">Result map</span>
          </div>
        </div>
      </section>
    </main>

    <footer class="footer">
      <span>(c) 2021/22 HKA_IWI_VSYS</span>
    </footer>

    <!-- Load JavaScripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="./javascripts/location-helper.js"></script>
    <script src="./javascripts/map-manager.js"></script>
    <script src="./javascripts/geotagging.js"></script>
  </body>
</html>
